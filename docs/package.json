{
  "name": "sfeirschoolnodejs",
  "version": "1.0.0",
  "description": "Sfeir School NodeJS with revealJS",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass ./scss/slides.scss -o ./css/ --source-map=true --watch=\"scss\" --recursive=\"scss\"",
    "sass-once": "node-sass ./scss/slides.scss -o ./css/ --source-map=true ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "live-server --port=4242 --open=\"./index.html\" --watch=\"markdown/\"",
    "start": "parallelshell \"npm run serve\" \"npm run sass\"",
    "prepare": "snowpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefBinomed/SfeirSchoolTheme.git"
  },
  "keywords": [
    "nodejs",
    "sfeir"
  ],
  "author": "jefbinomed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sfeir-open-source/sfeir-school-template/issues"
  },
  "homepage": "https://github.com/sfeir-open-source/sfeir-school-template",
  "dependencies": {
    "chokidar-cli": "^1.2.2",
    "cpx": "^1.5.0",
    "highlight.js": "^9.15.6",
    "lit-html": "^1.1.2",
    "live-server": "^1.2.1",
    "node-sass": "^6.0.1",
    "parallelshell": "3.0.1",
    "reveal.js": "^4.1.0",
    "sfeir-school-theme": "../../sfeir-school-theme",
    "snowpack": "^1.6.0"
  },
  "snowpack": {
    "webDependencies": [
      "reveal.js/dist/*.esm.js",
      "reveal.js/plugin/**/*.esm.js",
      "sfeir-school-theme/dist/**/*",
      "lit-html",
      "highlight.js/styles/**/*"
    ]
  }
}
